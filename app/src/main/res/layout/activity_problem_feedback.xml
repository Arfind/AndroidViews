<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activity.ProblemFeedbackActivity">

    <include layout="@layout/layout_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sixteen"
        android:background="@drawable/bg_hint"
        android:lineSpacingExtra="2dp"
        android:padding="@dimen/sixteen"
        android:text="@string/problem_feedback_content"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/color_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/sixteen"
            android:paddingVertical="@dimen/eight"
            android:text="@string/issues"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_issues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingHorizontal="@dimen/sixteen"
            android:text="@string/app_name"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginStart="@dimen/sixteen"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_problems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingHorizontal="@dimen/sixteen"
            android:text="@string/faq_name"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/color_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/sixteen"
            android:paddingVertical="@dimen/eight"
            android:text="@string/contact_me"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingHorizontal="@dimen/sixteen"
            android:text="@string/qq"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginStart="@dimen/sixteen"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingHorizontal="@dimen/sixteen"
            android:text="@string/email"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/color_line" />
    </LinearLayout>
</LinearLayout>