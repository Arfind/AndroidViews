<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen"
                android:layout_marginLeft="@dimen/sixteen"
                android:layout_marginRight="@dimen/sixteen"
                android:layout_marginTop="@dimen/eight"
                android:background="@color/transparent"
                android:contentDescription="@string/project_description"
                android:src="@drawable/ic_project" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nick_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four"
                    android:text="@string/phone"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight"
                android:layout_marginEnd="@dimen/twelve"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawableTint="@color/text_color_hint" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginTop="@dimen/sixteen"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_text_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/text_clock"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/horizontal_scroll_view"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_view_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/view_switcher"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_view_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/view_flipper"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/gallery"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_expandable_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/expandable_list_view"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_stack_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/stack_view"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_grid_Layout_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/grid_Layout_image_view"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/bar"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_sliding_pane_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/text_color_hint"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/twelve"
            android:paddingStart="@dimen/sixteen"
            android:text="@string/sliding_pane_layout"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>
</ScrollView>